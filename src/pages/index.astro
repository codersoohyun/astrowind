---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'PickBoom365 — Best Deals, Ideas & Products Curated for You',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-8 max-w-screen-xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-center">Explore Our Picks</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
      <!-- Deals -->
      <div class="bg-white shadow rounded overflow-hidden">
        <img src="/images/deals-sample.jpg" alt="Deals" class="w-full h-48 object-cover">
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold mb-2">Deals</h3>
          <a href="/deals" class="text-blue-600 hover:underline">View Products →</a>
        </div>
      </div>

      <!-- Best -->
      <div class="bg-white shadow rounded overflow-hidden">
        <img src="/images/best-sample.jpg" alt="Best" class="w-full h-48 object-cover">
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold mb-2">Best</h3>
          <a href="/best" class="text-blue-600 hover:underline">View Products →</a>
        </div>
      </div>

      <!-- Ideas -->
      <div class="bg-white shadow rounded overflow-hidden">
        <img src="/images/ideas-sample.jpg" alt="Ideas" class="w-full h-48 object-cover">
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold mb-2">Ideas</h3>
          <a href="/ideas" class="text-blue-600 hover:underline">View Products →</a>
        </div>
      </div>

      <!-- New -->
      <div class="bg-white shadow rounded overflow-hidden">
        <img src="/images/new-sample.jpg" alt="New" class="w-full h-48 object-cover">
        <div class="p-4 text-center">
          <h3 class="text-lg font-semibold mb-2">New</h3>
          <a href="/new" class="text-blue-600 hover:underline">View Products →</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
